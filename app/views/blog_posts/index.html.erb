<p style="color: green"><%= notice %></p>


<h1>Blog posts</h1>

<%= form_with url: blog_posts_path, method: :get do |form| %>
   <%= form.text_field :query %>
    <%= form.submit "Search" %>
<% end %>

<div id="blog_posts">
  <% @blog_posts.each do |blog_post| %>
    <%= render blog_post %>
    <p>
      <%= link_to "Show ", blog_post, class:"btn btn-outline-primary" %>
    </p>
  <% end %>
</div>

<%= link_to "New blog post", new_blog_post_path, class: "btn btn-outline-primary" %>

